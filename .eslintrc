{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [1, 120, 2, {ignoreComments: true}],
        "no-console": 0,
        "indent": [1, "tab"],
        "space-in-parens": 0,
        "object-curly-spacing": 1,
        "one-var": 0,
        "computed-property-spacing": 1,
        "array-bracket-spacing": 1,
        "no-inline-comments": 0
    },
    "globals": {
        "global": true,
        "i18n": true,
        "Promise": true,
        "PropTypes": true,
        "React": true,
        "ReactDOM": true,
        "WeakMap": true
    },
    "root": true,
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "15.4.2",
        },
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "idiomatic"
    ],
}
